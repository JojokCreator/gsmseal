---
import Footer from "./Footer.astro";
import Navbar from "./NavBar.astro";
import { SEO } from "astro-seo";

import "@fontsource/black-ops-one";
import "@fontsource-variable/source-sans-3";
import "@fontsource/source-sans-pro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title="Green Thumb Landscapers - Highest value service by doing it the right way the first time. Delivering premium quality work and serving our community is our first and foremost goal."
      description="Highest value service by doing it the right way the first time. Delivering premium quality work and serving our community is our first and foremost goal."
      openGraph={{
        basic: {
          title:
            "Green Thumb Landscapers - Highest value service by doing it the right way the first time. Delivering premium quality work and serving our community is our first and foremost goal.",
          type: "website",
          image: "/facebook.jpg",
        },
        optional: {
          description:
            "Green Thumb Landscapers - Highest value service by doing it the right way the first time. Delivering premium quality work and serving our community is our first and foremost goal.",
        },
      }}
      extend={{
        meta: [
          {
            name: "twitter:image",
            content: "/twitter.jpg",
          },
          { name: "twitter:title", content: "Tinker Tailor Soldier Spy" },
          { name: "twitter:description", content: "Agent" },
        ],
      }}
    />
  </head>
  <body class="overflow-x-hidden">
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>
